@startuml FraudGuard_Deployment
title FraudGuard - Docker Deployment

skinparam backgroundColor #0F0F0F
skinparam defaultFontColor #FFFFFF
skinparam nodeBackgroundColor #162542
skinparam nodeBorderColor #2E90E6
skinparam componentBackgroundColor #1A3A52
skinparam databaseBackgroundColor #2D8659
skinparam artifactBackgroundColor #FF6B35

node Host {
    node "DOCKER" as docker {
        
        node "NGINX" {
            component "Reverse Proxy" as nginx
        }
        
        node "FRONTEND" {
            component "Angular 17" as angular
        }
        
        node "API" {
            component "ASP.NET" as api
        }
        
        node "DB" {
            database "SQL Server" as sqlserver
        }
        
        node "CACHE" {
            database "Redis" as redis
        }
        
        node "KAFKA" {
            component "Zookeeper" as zk
            queue "Kafka" as kafka
            zk --> kafka
        }
        
        node "ML" {
            component "Python" as ml
            component "XGBoost" as model
            ml --> model
        }
        
        node "MONITORING" {
            component "Prometheus" as prometheus
            component "Grafana" as grafana
            prometheus --> grafana
        }
        
        node "TOOLS" {
            component "Kafka UI" as kafkaui
        }
    }
}

nginx --> angular
nginx --> api
angular --> api
api --> sqlserver
api --> redis
api --> kafka
kafka --> ml
ml --> kafka
api -.-> prometheus
sqlserver -.-> prometheus
redis -.-> prometheus
kafka -.-> prometheus
ml -.-> prometheus
kafka --> kafkaui

actor user
user --> nginx

note right of Host
  10 Containers
  10 Services
  Fully orchestrated
end note

@enduml
