@startuml FraudGuard_Architecture
title FraudGuard - Enterprise Fraud Detection System

skinparam backgroundColor #0F0F0F
skinparam defaultFontColor #FFFFFF
skinparam componentBackgroundColor #1A3A52
skinparam componentBorderColor #2E90E6
skinparam packageBackgroundColor #162542
skinparam packageBorderColor #2E90E6
skinparam arrowColor #4CAF50

package "CLIENT" #0D47A1 {
    actor user
    component "Browser" as browser
    component "Angular 17" as angular
    browser --> angular
}

package "API" #1565C0 {
    component "ASP.NET Core" as api
}

package "DATA" #FF6B35 {
    database "SQL Server" as sqlserver
    cache "Redis" as redis
}

package "MESSAGING" #2D8659 {
    component "Zookeeper" as zookeeper
    queue "Kafka" as kafka
    zookeeper --> kafka
}

package "ML" #7B1FA2 {
    component "Python Flask" as ml
    component "XGBoost\n(98%)" as model
    ml --> model
}

package "MONITORING" #C41E3A {
    component "Prometheus" as prometheus
    component "Grafana" as grafana
    prometheus --> grafana
}

package "TOOLS" #1A5C7A {
    component "Kafka UI" as kafkaui
}

browser --> api : HTTP
api --> sqlserver : SQL
api --> redis : Cache
api --> kafka : Events
kafka --> ml : Data
ml --> kafka : Results
kafka --> api : Results

api -.-> prometheus : Metrics
sqlserver -.-> prometheus
redis -.-> prometheus
kafka -.-> prometheus
ml -.-> prometheus
prometheus --> grafana

kafka --> kafkaui : Browse
user --> browser
angular --> user

@enduml
