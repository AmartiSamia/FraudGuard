@startuml FraudGuard_UseCases
title FraudGuard - Use Cases

skinparam backgroundColor #0F0F0F
skinparam defaultFontColor #FFFFFF
skinparam packageBackgroundColor #162542
skinparam usecaseBackgroundColor #1A3A52
skinparam usecaseBorderColor #2E90E6
skinparam actorBackgroundColor #0D47A1
skinparam actorBorderColor #2E90E6

actor "Customer" as customer
actor "Analyst" as analyst
actor "Admin" as admin
actor "Compliance" as compliance
actor "Manager" as manager

package "SYSTEM" {
    usecase "Submit\nTransaction" as uc1
    usecase "Fraud\nDetection" as uc2
    usecase "Anomaly\nCheck" as uc3
    usecase "Risk\nScore" as uc4
    usecase "Manage\nAlerts" as uc5
    usecase "Account\nTakeover" as uc6
    usecase "User\nProfile" as uc7
    usecase "Analytics" as uc8
    usecase "Compliance" as uc9
    usecase "Metrics" as uc10
    usecase "System\nStatus" as uc11
    usecase "Services" as uc12
}

customer --> uc1
uc1 --> uc2
uc1 --> uc3
uc1 --> uc4

analyst --> uc5
analyst --> uc6
analyst --> uc7

manager --> uc8
manager --> uc10

compliance --> uc9

admin --> uc11
admin --> uc12

@enduml
